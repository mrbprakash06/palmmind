doctype html
html
  include includes/head.pug
  body
    .container
        .row.justify-content-md-center.mt-4
            .col-6
                if flash && flash.type === "error"
                    .alert.alert-danger(role='alert')= flash.message
                h1 Welcome to Palmmind User CRUD
                p Please login using your username and password
                form.mb-4(method='post')
                    .mb-3
                        label.form-label(for='username') Username
                        input#username.form-control(type='text', name='username')
                    .mb-3
                        label.form-label(for='password') Password
                        input#password.form-control(type='password', name='password')
                    button.btn.btn-primary(type='submit') Submit
        .row.justify-content-md-center    
            .col-6
                div 
                    a(href='/auth/register') Don't have an account?